{
  "name": "github-rest-api-collection",
  "version": "1.0.0",
  "description": "Bruno API collection for GitHub REST API with automated tests",
  "scripts": {
    "test": "bru run --env Prod",
    "test:json": "bru run --env Prod --output results.json --format json",
    "test:junit": "bru run --env Prod --output test-results.xml --format junit",
    "test:html": "bru run --env Prod --output test-results.html --format html"
  },
  "keywords": [
    "bruno",
    "api",
    "github",
    "rest",
    "testing"
  ],
  "devDependencies": {
    "@usebruno/cli": "^1.0.0"
  }
}

